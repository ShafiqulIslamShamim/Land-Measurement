<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Card theme -->
    <style name="Monet.Card" parent="Widget.Material3.CardView.Elevated">
        
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="cardCornerRadius">28dp</item>
    </style>

    <!-- Icon Card theme -->
    <style name="IconCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_card_background</item>
        <item name="android:tint">?colorOnSecondaryContainer</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTint">?colorSecondaryContainer</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <!-- Button theme -->
    <style
    name="DashchanMonet.Button"
    parent="@style/Widget.Material3.Button"
  />
  
  <style
    name="RoundedOutlinedTextInput"
    parent="Widget.Material3.TextInputLayout.OutlinedBox"
  >

    <item name="boxCornerRadiusTopStart">16dp</item>
    <item name="boxCornerRadiusTopEnd">16dp</item>
    <item name="boxCornerRadiusBottomStart">16dp</item>
    <item name="boxCornerRadiusBottomEnd">16dp</item>
</style>
<style name="ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
    <item name="android:textStyle">bold</item>
</style>

<style name="TabText" parent="TextAppearance.Material3.TitleMedium">
    <item name="android:textStyle">bold</item>
</style>

</resources>
